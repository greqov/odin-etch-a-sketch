{
  "root": true,
  "globals": {
    "window": true,
    "document": true
  },
  "extends": [
    "airbnb-base",
    "prettier",
    "plugin:node/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "strict": ["error", "global"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}